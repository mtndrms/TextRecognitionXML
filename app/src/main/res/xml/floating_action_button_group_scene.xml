<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="250">
        <KeyFrameSet />
        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@+id/floatingButton" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/fabPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/navigation"
            motion:layout_constraintEnd_toStartOf="@id/floatingButton" />

        <Constraint
            android:id="@+id/fabTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/navigation"
            motion:layout_constraintStart_toEndOf="@id/floatingButton" />
    </ConstraintSet>
</MotionScene>