<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:transitionFlags="disableIntraAutoTransition">
        <KeyFrameSet />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ivLine"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="@string/scanning_animation_line"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/img_scan_line"
            motion:layout_constraintTop_toTopOf="@id/ivImage" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/ivLine"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="@string/scanning_animation_line"
            android:src="@drawable/img_scan_line"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/ivImage" />
    </ConstraintSet>
</MotionScene>